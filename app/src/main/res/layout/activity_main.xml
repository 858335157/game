<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/starbackground"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="0,1,2,3,4">



    </FrameLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/ball"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/balla" />

    <ImageView
        android:src="@drawable/directionaluncontro"
        android:id="@+id/imageView"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginBottom="-30dp"
        android:layout_gravity="start|bottom" />

    <ImageButton
        android:background="@drawable/directionalcontro"
        android:id="@+id/director"
        android:onClick="doing"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginBottom="-30dp"
        android:layout_gravity="start|bottom" />

    <Button
        android:background="@drawable/buttonbasestyle"
        android:id="@+id/jump"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="jump"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:layout_gravity="end|bottom"
        tools:ignore="HardcodedText" />




</FrameLayout>